<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:TasteRecipes.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TasteRecipes.Views.AddCategoryView"
        x:DataType="viewModels:AddCategoryViewModel"
        x:Name="Window"
        Title="AddCategoryView">
    
    <Design.DataContext>
        <viewModels:AddCategoryViewModel/>
    </Design.DataContext>
    
    <StackPanel>
        <TextBox Watermark="Название" Text="{Binding NewCategory.Name}"/>
        <Button Content="Добавить"
                Command="{ReflectionBinding CreateCategoryButton}"
                CommandParameter="{ReflectionBinding ElementName=Window}"/>
    </StackPanel>
</Window>
